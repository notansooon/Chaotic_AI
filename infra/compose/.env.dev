# Kyntrix Development Environment
# Use with: docker compose --env-file .env.dev -f docker-compose.dev.yml up

# PostgreSQL
POSTGRES_USER=kyntrix
POSTGRES_PASSWORD=dev
POSTGRES_DB=kyntrix

# Redis (no password in dev)
REDIS_URL=redis://redis:6379

# Agents Server
HTTP_PORT=4318
NODE_ENV=development
SNAPSHOT_INTERVAL_MS=3000

# Frontend URLs (localhost for dev)
NEXT_PUBLIC_WS_URL=ws://localhost:4318
NEXT_PUBLIC_API_URL=http://localhost:4318
