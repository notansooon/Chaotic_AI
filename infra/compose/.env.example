# Kyntrix Production Environment Configuration
# Copy this file to .env and fill in your values

# Domain Configuration
DOMAIN=kyntrix.example.com
ACME_EMAIL=admin@example.com

# Traefik Dashboard (generate with: htpasswd -nb admin password)
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xyz...

# PostgreSQL
POSTGRES_USER=kyntrix
POSTGRES_PASSWORD=change-me-to-a-strong-password
POSTGRES_DB=kyntrix

# Redis
REDIS_PASSWORD=change-me-to-a-strong-password

# Optional: External services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=kyntrix-traces
